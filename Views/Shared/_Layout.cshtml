<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/lib/bootstrap5/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/estilos.css">
    <title>TagHelpers</title>
</head>

<body style="padding-bottom: 80px" class="mb-3">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">TagHelpers</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarMain">
                <div class="navbar-nav ms-auto">
                    <a class="nav-link" asp-controller="Home" asp-action="Index" asp-link-class="link-ativo">Principal</a>
                    <a class="nav-link" asp-controller="Home" asp-action="Portifolio" asp-link-class="link-ativo">Portfolio</a>
                    <a class="nav-link" asp-controller="Home" asp-action="Sobre" asp-link-class="link-ativo">Sobre</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-2">
        <h1>@ViewBag.Subtitulo</h1>
        <hr>
        @RenderBody()
    </div>

    <div class="text-light bg-dark p-3 fixed-bottom text-center">
        TagHelpers&copy; @DateTime.Now.Year.ToString()<br>
        Todos os direitos reservados
    </div>

    @RenderSection("Scripts", false)
</body>

</html>